
load @treesurf/moon
  take suit or

load @treesurf/nest/code/javascript/native
  take face native-null
  take face native-number
  take face native-string

load @treesurf/nest/code/javascript/dom
  take face canvas-gradient
  take face canvas-image-source
  take face canvas-pattern

face canvas-fill-stroke-styles, name <CanvasFillStrokeStyles>
  link fill-style, name <fillStyle>
    like or
      like native-string
      like canvas-gradient
      like canvas-pattern
    flex true
  link stroke-style, name <strokeStyle>
    like or
      like native-string
      like canvas-gradient
      like canvas-pattern
    flex true

  task create-linear-gradient, name <createLinearGradient>
    take x0, like native-number
    take y0, like native-number
    take x1, like native-number
    take y1, like native-number
    free seed, like canvas-gradient

  task create-pattern, name <createPattern>
    take image, like canvas-image-source
    take repetition
      like or
        like native-string
        like native-null
    free seed
      like or
        like canvas-pattern
        like native-null

  task create-radial-gradient, name <createRadialGradient>
    take x0, like native-number
    take y0, like native-number
    take r0, like native-number
    take x1, like native-number
    take y1, like native-number
    take r1, like native-number
    free seed, like canvas-gradient
