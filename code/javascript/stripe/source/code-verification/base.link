
load @treesurf/nest/code/javascript/base/native-number
  take form native-number

load @treesurf/nest/code/form/or
  take form or
    save form or-link-text

form code-verification, name <CodeVerification>
  take attempts-remaining, name <attempts_remaining>
    like native-number
    lock false
  take status, name <status>
    like or-link-text
      text <pending>
      text <attempts_remaining>
      text <succeeded>
      text <failed>
      text <attempts_remaining>
    lock false
