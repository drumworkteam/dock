
load @wavebond/moon
  take form or

load @wavebond/bolt/code/javascript
  take form abortable
  take form native-boolean
  take form native-string
  take form native-undefined

load @wavebond/bolt/code/node/child-process
  take form common-options
  take form messaging-options
  take form stdio-options

form common-spawn-options, name <CommonSpawnOptions>
  base common-options
  base messaging-options
  base abortable

  link argv0, name <argv0>
    like or
      like native-string
      like native-undefined
    flex true
  link stdio, name <stdio>
    like or
      like stdio-options
      like native-undefined
    flex true
  link shell, name <shell>
    like or
      like native-boolean
      like native-string
      like native-undefined
    flex true
  link windows-verbatim-arguments, name <windowsVerbatimArguments>
    like or
      like native-boolean
      like native-undefined
    flex true
