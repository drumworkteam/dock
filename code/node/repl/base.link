
bear @nerdbond/bolt/code/javascript/node/repl/repl-options
bear @nerdbond/bolt/code/javascript/node/repl/repl-eval
bear @nerdbond/bolt/code/javascript/node/repl/repl-writer
bear @nerdbond/bolt/code/javascript/node/repl/repl-command-action
bear @nerdbond/bolt/code/javascript/node/repl/repl-command
bear @nerdbond/bolt/code/javascript/node/repl/repl-server
bear @nerdbond/bolt/code/javascript/node/repl/recoverable

load @nerdbond/moon
  take form and
  take form form
  take form or

load @nerdbond/bolt/code/javascript
  take form inspect-options
  take form native-string
  take form native-symbol
  take form repl-server

load @nerdbond/bolt/code/node/repl
  take form repl-options
  take form repl-writer

host writer, name <writer>
  like and
    like repl-writer
    like form
      link options, name <options>
        like inspect-options
        flex true

host repl-mode-sloppy, name <REPL_MODE_SLOPPY>
  like native-symbol
    cool true

host repl-mode-strict, name <REPL_MODE_STRICT>
  like native-symbol
    cool true

task start, name <start>
  like repl-server

  take options
    like or
      like native-string
      like repl-options
    void true
